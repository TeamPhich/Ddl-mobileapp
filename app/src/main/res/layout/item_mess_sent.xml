<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"

    >


    <TextView

        android:id="@+id/text_messagesend_body"

        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toTopOf="parent"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:background="@drawable/rounded_rectangle_send"

        android:maxWidth="240dp"

        android:padding="8dp"

        android:text="hello, hello!"

        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="318dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView

        android:id="@+id/text_messagesend_time"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:text="11:40"

        android:textSize="10sp"

        app:layout_constraintBottom_toBottomOf="@+id/text_messagesend_body"

        app:layout_constraintEnd_toStartOf="@+id/text_messagesend_body"
        app:layout_constraintRight_toLeftOf="@+id/text_messagesend_body"
        tools:layout_editor_absoluteY="21dp" />

</androidx.constraintlayout.widget.ConstraintLayout>